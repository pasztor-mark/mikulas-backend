generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Anyag {
  Wood
  Metal
  Plastic
  Other
}

model Jatek {
  id          Int        @default(autoincrement()) @id
  megnevezes  String
  anyag       Anyag      @default(Other)
  suly        Float
  keresek     Keresek[]
}

model Gyerek {
  id          Int        @default(autoincrement()) @id
  nev         String
  pontosCim   String
  jo          Boolean
  keresek     Keresek[]
}

model Keresek {
  jatek       Jatek      @relation(fields: [jatekId], references: [id], onDelete: Cascade)
  jatekId     Int
  gyerek      Gyerek     @relation(fields: [gyerekId], references: [id])
  gyerekId    Int

  @@id([jatekId, gyerekId])
  @@unique([gyerekId])
  @@unique([jatekId])
}
